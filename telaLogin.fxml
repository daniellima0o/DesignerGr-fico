<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.daniellima.login.controller.TelaLoginController">
    <children>
        <Label fx:id="usuarioLabel" layoutX="239.0" layoutY="55.0" text="Nome de Usuário">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <TextField fx:id="usuarioTextField" layoutX="201.0" layoutY="80.0" promptText="Nome de usuário">
            <font>
                <Font size="16.0" />
            </font>
        </TextField>
        <Label fx:id="senhaLabel" layoutX="278.0" layoutY="115.0" text="Senha">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <PasswordField fx:id="senhaField" layoutX="201.0" layoutY="140.0" promptText="senha">
            <font>
                <Font size="16.0" />
            </font>
        </PasswordField>
        <Button fx:id="loginButton" layoutX="270.0" layoutY="190.0" mnemonicParsing="false" onAction="#login" text="Login">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Label fx:id="msgLoginLabel" layoutX="201.0" layoutY="260.0" prefHeight="25.0" prefWidth="198.0">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Hyperlink fx:id="loginLink" ellipsisString="" layoutX="254.0" layoutY="304.0" onAction="#cadastrar" text="Cadastre-se">
            <font>
                <Font size="16.0" />
            </font>
        </Hyperlink>
    </children>
</AnchorPane>
